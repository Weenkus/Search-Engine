		<%= select_date Date.today, prefix: :end_date %>
		
		<br> &nbsp;<br>
		
	    <div class = "box">
			<%= radio_button_tag(:time, "day") %>
			<%= label_tag(:day, "DAY") %>
			&nbsp;
			<%= radio_button_tag(:time, "hour") %>
			<%= label_tag(:hour, "HOUR") %>
