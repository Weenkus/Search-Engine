	<!-- Print the results only fi they exist -->
	<% if @results.present? %>
		<h3>Results</h3>
		<br> &nbsp;<br>		
		<div class = "textBox">
		
			<table  border="1"> 	
				<tr>	
					<% @datesForHTML.each do |h| %>
						<td> <b><%= h.html_safe %></b> &nbsp;&nbsp;&nbsp;&nbsp; </td> 
					<% end %>	
				</tr>
				<% @results.each do |r| %>
					<tr>
						<% r.each do |k| %>
							<td> 
								<% if k.nil? %> 
									<%= 0 %>
								<% else %>
									<%= k %>
								<% end %>
							</td>
						<% end %>
					</tr>
				<% end %>	 
			</table>
			
		</div>	
	<% end %>
	
</div>

